<article class="blog">
  <div class="title">
    <div class="title-header">
    <a href="/blog/{{id}}">{{title}}</a>
    <span>Posted by {{user.username}} on {{format_date created_at}}</span>
    </div>
    <p>{{ blog_text}}</p>
  </div>
  <div class="meta">
    
    
    ({{comments.length}} {{format_plural "comment" comments.length}})
  </div>
</article>